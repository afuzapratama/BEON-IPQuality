# Railway Environment Variables
# Copy this to your Railway project settings

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://postgres:password@your-postgres-host:5432/ipquality?sslmode=require
REDIS_URL=redis://default:password@your-redis-host:6379

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=0.0.0.0
API_PORT=8080
API_KEY=your-secure-api-key-here
RATE_LIMIT=1000
RATE_LIMIT_WINDOW=60

# ===========================================
# MMDB CONFIGURATION
# ===========================================
MMDB_PATH=/app/data/mmdb/ipquality.mmdb
GEOIP_CITY_PATH=/app/data/geoip/GeoLite2-City.mmdb
GEOIP_ASN_PATH=/app/data/geoip/GeoLite2-ASN.mmdb
GEOIP_COUNTRY_PATH=/app/data/geoip/GeoLite2-Country.mmdb

# ===========================================
# CACHE CONFIGURATION
# ===========================================
CACHE_TTL=300
CACHE_MAX_SIZE=100000

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# MAXMIND CONFIGURATION (for auto-updates)
# ===========================================
MAXMIND_LICENSE_KEY=your-maxmind-license-key

# ===========================================
# OPTIONAL: ClickHouse Analytics
# ===========================================
# CLICKHOUSE_URL=clickhouse://default:password@your-clickhouse-host:9000/ipquality

# ===========================================
# OPTIONAL: Prometheus Metrics
# ===========================================
METRICS_ENABLED=true
METRICS_PORT=9100
